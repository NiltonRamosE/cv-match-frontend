---
import PublicLayout from '@/layouts/PublicLayout.astro';
import HomePage from '@/home/HomePage';
const robots = ["index", "follow"];
const title = "CV Match - Personaliza tu CV";
const description = "Crea y personaliza tu currículum vitae en línea con CV Match. Elige entre diversas plantillas profesionales y creativas para destacar tus habilidades y experiencia.";
const keywords = ["cv", "curriculum", "cv online", "crear cv", "plantillas cv", "generador cv", "diseño cv", "cv profesional", "cv creativo", "cv moderno"];
const url = "https://cv-match.vercel.app";
const imageOG = "/favicon.svg";
const imagetwt = "/favicon.svg";

---

<PublicLayout {robots} {title} {description} {keywords} {url} {imageOG} {imagetwt}>
	<HomePage client:load/>
</PublicLayout>
